{
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.formatOnSave": true,
    "editor.rulers": [
        120
    ],
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.mli?$",
                "cmd": "make"
            }
        ]
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.cm*": true,
        "**/*.o": true
    },
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.renderWhitespace": "boundary"
}
